<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form', q: @q, url: shops_path %>
    </div>
  </div>
  <!-- 掲載店一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @shops.present? %>
          <%= render @shops %>
        <% else %>
          <div class="mb-3"><%= t('shops.index.no_result') %></div>
        <% end %>
      </div>
      <%= paginate @shops, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>