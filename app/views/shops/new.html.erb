<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @shop, class: "new_shop" do |f| %>
        <div class="mb-3">
          <%= f.label :shop_name %>
          <%= f.text_field :shop_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :tel %>
          <%= f.text_field :tel, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :shop_hours %>
          <%= f.text_field :shop_hours, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :price %>
          <%= f.text_field :price, class: "form-control" %>
        </div>
        <%= f.submit nil, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>