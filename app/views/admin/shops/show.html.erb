<% content_for(:title, @shop.shop_name) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_shop_path(@shop), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_shop_path(@shop), data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Shop.human_attribute_name(:id) %></th>
          <td><%= @shop.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Shop.human_attribute_name(:shop_name) %></th>
          <td><%= @shop.shop_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Shop.human_attribute_name(:address) %></th>
          <td><%= @shop.address %></td>
        </tr>
        <tr>
          <th scope="row"><%= Shop.human_attribute_name(:tel) %></th>
          <td><%= @shop.tel %></td>
        </tr>
        <tr>
          <th scope="row"><%= Shop.human_attribute_name(:shop_hours) %></th>
          <td><%= @shop.shop_hours %></td>
        </tr>
        <tr>
          <th scope="row"><%= Shop.human_attribute_name(:price) %></th>
          <td><%= number_to_currency(@shop.price, unit: "å††", format: "%n%u") %></td>
        </tr>
        <tr>
          <th scope="row"><%= Shop.human_attribute_name(:user) %></th>
          <td><%= @shop.user.decorate.full_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Shop.human_attribute_name(:created_at) %></th>
          <td><%= l @shop.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>